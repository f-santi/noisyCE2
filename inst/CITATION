
citHeader("To cite package 'noisyCE2' in publications use:")

year <- sub(".*(2[[:digit:]]{3})-.*", "\\1", meta$Date, perl = TRUE)
vers <- paste('R package version', meta$Version)

citEntry(entry = 'Manual',
  title       = paste('noisyCE2:', meta$Title),
  author      = personList(person('F.', 'Santi')),
  year = year,
  note = vers,
  textVersion =
    paste('Santi, F. (', year, ') "noisyCE2: ',
      meta$Title, '". ', vers, '.', sep = ''
    )
)
